@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Ubuntu+Mono&display=swap');

body{
background-color:#B4BFD3;
font-family: 'Nunito', sans-serif;
margin:0;
color:191411;
}

.fondo{
  display: flex;
  flex-direction:column;
  flex-wrap: nowrap;
  align-items:center;
  justify-content:center;
  gap:2vh;
  padding:5vh;

 }
.scheda{
  padding-bottom:20px;
  width:70vmin;
  background-color:#FFF9F0;
  border-radius: 10px;
  text-align:center;
  box-shadow: 10px 10px 5px rgba(0,0,0,0.1); 
  
}

.indovinello{
  display: flex;
  width:70vmin;
  flex-direction:row;
  align-items:center;
  justify-content:center;
  gap:2vh;
}

#guess {
  display: inline-block;
  margin: 1.2rem;
  border: none;
  padding: 0;
  width: 10.5ch;
  background: repeating-linear-gradient(90deg, #191411  0, #191411 1ch, transparent 0, transparent 1.5ch) 0 100%/ 9ch 2px no-repeat;
  font: 26px 'Ubuntu Mono', monospace;
  //font-family: 'Nunito', sans-serif;
  letter-spacing: 0.5ch;
}


 #guess:focus {
  outline: none;
  color: #518C31;
}

  #conferma{
  background-color: #FFF9F0;
  font-family: 'Nunito', sans-serif;
  color:black;
  padding:3%;
  width: 30%;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
  font-size:20px;
  }
  
.allrobot{
	display:flex;
	flex-direction:column;
	position:absolute;
	bottom:5vh;
	right:5vw;
    justify-content:center;
	align-items:flex-end;

  }



  //.bubble {
  background-color:#FFF9F0;  
  font-size: 14px;
  width: 200px;
  border-radius: 8px;
  padding: 5%;
  text-align: center;
  box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
}


#bubble {
    position: relative;
    background-color: #FFF9F0;
    font-size: 14px;
    padding: 5%;
    text-align: center;
    width: 200px;
	height:50px;
    border-radius: 8px;
    border-bottom-right-radius:0px;
    box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
}

 #bubble:after {
    content: '';
    position: absolute;
    display: block;
    width: 0;
    z-index: 1;
    border-style: solid;
    border-width: 27px 0 0 30px;
    border-color: transparent transparent transparent #FFF9F0;
    top: 100%;
    right: 0px;
    margin-top: -18px;
	transform: rotate(-180deg);
 }
  
