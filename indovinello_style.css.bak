#robot{
width:70%;
}
  

 
@media screen and (max-width: 480px) {
.fondo{
	margin-top:15vh;
	
}

#robot{
width:20%;
}
.allrobot{
	flex-direction:row;
    position:relative;
	
    right:0vw;
	bottom:2vh;
	align-items: center;
	justify-content:center;
	gap:5%;
   }
   
#bubble{
width:40%;
   padding: 2%;
   font-size:12px;
   margin:0;
   }
   
#bubble:after {
    content: '';
    position: absolute;
    display: block;
    width: 0;
    z-index: 1;
    border-style: solid;
    border-width: 19px 0 0 19px;
    border-color: transparent transparent transparent #FFF9F0;
    top: 89.5%;
    right: -12px;
    margin-top: -12.3px;
	transform: rotate(0deg);
 }
   
}
