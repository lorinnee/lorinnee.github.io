<!-- tasto audio -->
 .checkbox-custom{
    opacity: 0;
    position: absolute;   
	
}

.checkbox-custom, .checkbox-custom-label{
   position:absolute;
	top:90vh;
	left:80px;
	box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
}


.checkbox-custom + .checkbox-custom-label:before{
    content: "\f028";
    font-family: 'FontAwesome';
    background: #ffffd8;
	color: black;
    display: inline-block;
    padding:50%;
	width: 15px;
    height: 15px;
  	border-radius:50%;
	text-align:center;
}

.checkbox-custom:checked + .checkbox-custom-label:before {
    content: "\f026";
    font-family: 'FontAwesome';
    background: #ffffd8;
    color: black;
}



  
 
 @media screen and (max-width: 600px) {

  .allrobot{
	flex-direction:row;
    position:relative;
    width:100%;
    top:0vh;
    right:0vw;
    
  }
}