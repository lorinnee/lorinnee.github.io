@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@700&display=swap');

body{
background-color:rgb(171, 179, 182);
font-family: 'Nunito', sans-serif;;

}
.fondo{
  display: flex;
  flex-direction:column;
  flex-wrap: nowrap;
  background-color:rgb(171, 179, 182);
  align-items:center;
  justify-content:center;
  gap:2vh;
  
  
 }
.scheda{
  padding-bottom:20px;
  width:70vmin;
  background-color: #ffffd8;
  border-radius: 10px;
  text-align:center;
  box-shadow: 10px 10px 5px rgba(0,0,0,0.1);
}

 

 
.buttons{
  display: flex;
  width:70vmin;
  background-color:(171, 179, 182);
  flex-direction:row;
  align-items:center;
  justify-content:space-between;
  gap:2vh;
}


.button_left{
  background-color: #ffffd8;
  padding:6%;
  width: 50%;
  border: none;
  border-radius: 8px;
  color: black;
  cursor: pointer;
  box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
  font-size:20px;
  }

.button_right{
  background-color: #ffffd8;
  padding:6%;
  width: 50%;
  border: none;
  border-radius: 8px;
  color: black;
  cursor: pointer;
  box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
  font-size:20px;
  }
  
  .allrobot{
	display:flex;
	flex-direction:column;
	position:absolute;
	top:61vh;
	right:10vh;
    justify-content:center;
	align-items:flex-end;
	gap:3%;

  }
  

  .bubble {
  background-color:#ffffd8;  
  font-size: 14px;
  width: 200px;
 
  border-radius: 8px;
  padding: 5%;
 
  text-align: center;
  
  box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
  
}


  
 
<!-- tasto audio -->
 .checkbox-custom{
    opacity: 0;
    position: absolute;   
	
}

.checkbox-custom, .checkbox-custom-label{
   position:absolute;
	top:90vh;
	left:80px;
	box-shadow: 8px 8px 5px rgba(0,0,0,0.1);
}


.checkbox-custom + .checkbox-custom-label:before{
    content: "\f028";
    font-family: 'FontAwesome';
    background: #ffffd8;
	color: black;
    display: inline-block;
    padding:50%;
	width: 15px;
    height: 15px;
  	border-radius:8px;
	text-align:center;
}

.checkbox-custom:checked + .checkbox-custom-label:before {
    content: "\f026";
    font-family: 'FontAwesome';
    background: #ffffd8;
    color: black;
}



  
 
@media screen and (max-width: 600px) {

#robot{
width:25%;
}
  .allrobot{
	flex-direction:row;
    position:relative;
    top:1vh;
    right:0vw;
	align-items: center;
   }
   
.bubble{
   padding: 3%;
   }
}