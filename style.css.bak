.fondo{
  display: flex;
  flex-direction:column;
  flex-wrap: nowrap;
  background-color:rgb(22, 179, 182);
  align-items:center;
  justify-content:center;
  margin:20%;
  gap:22px;
  
  
 }
.scheda{
  display: flex;
  flex-wrap: nowrap;
  background-color: white;
  border-radius: 20px;
  height:654px;
  width:582px;
  font-size: 16px;
  font-family: verdana;
  justify-content:center;
  flex-wrap:wrap;
  box-shadow: 10px 10px 5px rgba(0,0,0,0.1);
}

 
.buttons{
  display: flex;
  background-color:pink;
  flex-direction:row;
  align-items:center;
  gap:22px;
}


.button_left{
  display: flex;
  background-color: white;
  height: 92px;
  width: 276px;
